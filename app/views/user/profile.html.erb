<% if current_user != nil then %>
<% @profile = Profile.where(:user => current_user).first %>
<p id="notice"><%= notice %></p>
<div class="clear"></div>
<p>
  <strong>First name:</strong>
  <%= @profile.firstname %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.lastname %>
</p>

<p>
  <strong>Address:</strong>
  <%= @profile.address %>
</p>
<%if current_user.admin == true then%>
  <%= link_to @n_bike_rentals.to_s + " bike rentals", admin_show_bike_rentals_path(current_user.id), :class => 'btn btn-sm btn-primary', :style => 'color:white;'%>
 <%else%>
  <%= @n_bike_rentals%> bike rentals.
<% end %>

<% else %>
  You are not logged in.
<% end %>
